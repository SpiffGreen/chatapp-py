{
  "name": "chatapp",
  "version": "1.0.0",
  "description": "A simple chat application written in python",
  "main": "index.js",
  "scripts": {
    "dev:client": "npx tailwindcss -i ./src/static/css/global.css -o ./src/static/css/style.css --watch",
    "dev:server": "python ./src/main.py",
    "dev": "npx concurrently \"npm run dev:server\" \"npm run dev:client\""
  },
