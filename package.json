  "bugs": {
    "url": "https://github.com/SpiffGreen/chatapp-py/issues"
  },
  "homepage": "https://github.com/SpiffGreen/chatapp-py#readme",
  "devDependencies": {
    "concurrently": "^7.4.0",
    "tailwindcss": "^3.1.8"
  }
}
